{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "noEmitOnError": true,
    "lib": ["es2018", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "inlineSources": true,
    "incremental": true,
    "skipLibCheck": true
  }
}
